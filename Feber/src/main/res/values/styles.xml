<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="PageTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:actionBarStyle">@style/Actionbar</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
    <style name="Actionbar" parent="android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@drawable/gradient_rotated</item>

    </style>
    <!-- Override the background and use of logo for the action bar -->
    <style name="Movee" parent="android:style/Widget.Holo.ActionBar">
        <item name="android:background">@color/feber</item>
        <item name="android:displayOptions">useLogo|showHome</item>
    </style>

    <style name="Article_Header">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@android:color/primary_text_light</item>
    </style>
    <style name="Article_Large_Header" parent="Article_Header">
        <item name="android:textSize">24sp</item>
    </style>
    <style name="Article_Preamble">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@android:color/secondary_text_light</item>
        <item name="android:fontFamily">san-serif</item>
    </style>
    <style name="Article_Text">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@android:color/primary_text_light</item>
        <item name="android:lineSpacingExtra">6dp</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:fontFamily">san-serif</item>
    </style>

    <style name="TemperatureMeter">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:text">39.7Â°</item>
        <item name="android:textColor">#fff</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/circle_feber</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="Article_Published" parent="Article_Preamble">
        <item name="android:textSize">12sp</item>
    </style>


</resources>
